{{ ansible_managed | comment }}

LANGUAGE="en_US:en"
LANG="en_US.UTF-8"

FZF_DEFAULT_COMMAND="rg --files --follow --no-ignore-vcs --hidden --glob '!.git'"
FZF_DEFAULT_OPTS="
	--height=85%
	--prompt='∼ ' --pointer='▶' --marker='✓'
	--layout=reverse --multi --info=inline 
	--preview 'bat --style=numbers --color=always {} --line-range :500 {}' --border
	--bind '?:toggle-preview'
	--bind 'ctrl-a:select-all'
	--bind 'ctrl-y:execute-silent(echo {+} | pbcopy)'
	--bind 'ctrl-e:execute(echo {+} | xargs -o nvim)'
	--bind 'ctrl-v:execute(code {+})'
	--color='hl:148,hl+:154,pointer:032,marker:010,bg+:237,gutter:008'
"
PATH="{{ ansible_env.HOME }}/.local/bin:/usr/sbin:$PATH"

export LANGUAGE
export LANG

export PATH
export FZF_DEFAULT_COMMAND
export FZF_DEFAULT_OPTS

alias vim="nvim"
alias ls="exa -hlg"
alias cat="bat"
alias grep="rg"

# Remove duplicates in history
setopt EXTENDED_HISTORY
setopt HIST_EXPIRE_DUPS_FIRST
setopt HIST_IGNORE_DUPS
setopt HIST_IGNORE_ALL_DUPS
setopt HIST_IGNORE_SPACE  
setopt HIST_FIND_NO_DUPS
setopt HIST_SAVE_NO_DUPS
setopt HIST_BEEP